{% extends template('page-layout-main') %}

{% define config = {
    name: 'resource-share',
} %}

{% define data = {
    messages: _view.messages,
    loginLink: _view.loginLink
} %}

{% block content %}
    {% if data.messages is not empty %}
        {% for message in data.messages %}
            <div class="{{ config.name }}__error spacing-bottom spacing-bottom--big">
                {{ message.value | trans(
                    message.parameters
                ) }}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block breadcrumbs %}{% endblock %}

{% block sidebar %}{% endblock %}

{% block header %}
    {% embed organism('header') with {
        data: {
            loginLink : data.loginLink
        }
    } only %}
        {% block body %}
            <div class="container">
                <div class="{{ config.name }}__row grid grid--middle">
                    {% include molecule('logo') with {
                        class: 'col col--sm-8 col--lg-4'
                    } only %}
                    {% embed organism('navigation-top') with {
                        class: 'col col--sm-4 col--lg-8 text-right',
                        data: {
                            loginLink : data.loginLink
                        }
                    } only %}
                        {% block body %}
                            {% if (data.loginLink) %}
                            <ul class="menu">
                                <li class="menu__item"><a href="{{ data.loginLink }}">{{ 'customer.login'|trans }}</a></li>
                            </ul>
                            {% endif %}
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block pageInfo %}{% endblock %}

{% block footer %}{% endblock %}
